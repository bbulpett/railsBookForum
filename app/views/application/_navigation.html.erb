<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        Menu                       
      </button>
      <%= link_to "Buy eBook", "http://shop.oreilly.com/product/0636920039822.do", class: "btn btn-dark navbar-toggle", style: "color: #FFF; background-color: #B63E97;", target: "_blank" %>
      <%= link_to "Learning Rails 5", root_path, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li> 
        <li class="<%= 'active' if current_page?(preface_path) %>"><%= link_to "Preface", preface_path %></li> 
        <li class="<%= 'active' if current_page?(errata_path) %>"><%= link_to "Errata", errata_path %></li>
        <li class="<%= 'active' if current_page?(examples_path) %>"><%= link_to "Examples", examples_path %></li>
        <li class="<%= 'active' if current_page?(screencasts_path) %>"><%= link_to "Screencasts", screencasts_path %></li>
        <li class="<%= 'active' if current_page?(forums_path) %>"><%= link_to "Forum", forums_path %></li>
        <li class="<%= 'active' if current_page?(education_path) %>"><%= link_to "Teach", education_path %></li>
        <li class="share-button"><a href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"><i class="fa fa-share-square-o"></i>Share</a>
          <%= render 'share' %>
        </li>
        <% if current_user %>
          <li class="btn-registration"><%= link_to session_path("current"), class: "btn btn-sm btn-dark", method: "delete" do %>
              <i class="fa fa-sign-out"><span class="registration-button-text"> Log Out</span></i>
            <% end %>
          </li>
        <% else %>
          <li class="btn-registration"><%= link_to new_user_path, class: "btn btn-sm btn-dark", remote: true, data: { toggle: "modal", target: "#new_user_modal"} do%>
              <i class="fa fa-user-plus"><span class="registration-button-text"> Sign Up</span></i>
            <% end %>
          </li>
          <li class="btn-registration"><%= link_to new_session_path, class: "btn btn-sm btn-light", remote: true, data: { toggle: "modal", target: "#new_session_modal"} do%>
              <i class="fa fa-sign-in"><span class="registration-button-text"> Log In</span></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

