    <div class="modal-content">
      <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-share-square-o"></i>Close</button>
      <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <iframe src="https://www.facebook.com/sharer/sharer.php?u=http%3A//www.learningrails5.com">
            <%= image_tag "loading.gif" %>
        </iframe>
      </div>
    </div>
  </div>
</div>
