<div id="registration-form">
	<h1>Log In</h1>

	<%= form_tag sessions_path do %>
	  <div class="field">
	    <%= label_tag :login, 'Email or Username' %><br />
	    <%= text_field_tag :login %>
	  </div>
	  <div class="field">
	    <%= label_tag :password %><br />
	    <%= password_field_tag :password %>
	  </div>
	  <br>
	  <div class="actions"><%= submit_tag "Log In" %></div>
	<% end %>
</div>
